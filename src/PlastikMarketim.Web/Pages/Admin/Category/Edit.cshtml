@page
@using PlastikMarketim.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model PlastikMarketim.Web.Pages.Admin.Category.EditModel
@inject IStringLocalizer<PlastikMarketimResource> L
@{
    Layout = null;
}

<form asp-page="/Admin/Category/Edit">
    <abp-modal>
        <abp-modal-header title="@L["UpdateCategory"]"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.Id" type="hidden" />
            <abp-input asp-for="Category.ImageId" type="hidden" />
            <abp-input asp-for="Category.Name" label="@L["CategoryName"]" />
            <img src="@Model.Category.ImageUrl" class="form-group" alt="" width="550" height="300">
            <abp-input asp-for="Category.ImageFile" label="@L["Image"]" accept="image/png, image/gif, image/jpeg" />
            <abp-input asp-for="Category.Description" label="@L["Description"]" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>